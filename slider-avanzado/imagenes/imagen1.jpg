  <ellipse cx="154" cy="225" rx="12" ry="15" fill="#228B22"/>
  
  <rect x="650" y="225" width="12" height="25" fill="#8B4513"/>
  <ellipse cx="656" cy="210" rx="18" ry="25" fill="#228B22"/>
  
  <rect x="700" y="230" width="10" height="20" fill="#8B4513"/>
  <ellipse cx="705" cy="215" rx="15" ry="20" fill="#228B22"/>
  
  <!-- Texto descriptivo -->
  <text x="400" y="50" font-family="Arial" font-size="24" text-anchor="middle" fill="#FFFFFF">Amanecer en el lago</text>
